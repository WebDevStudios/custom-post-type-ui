{
  "name": "custom-post-type-ui",
  "version": "1.12.0",
  "description": "Custom Post Type UI",
  "main": "index.js",
  "directories": {
    "tests": "tests"
  },
  "scripts": {
    "start": "wp-scripts start",
    "dev": "wp-scripts start",
    "watch": "wp-scripts start",
    "build": "wp-scripts build",
    "build:release": "run-s styles uglify create:release",
    "lint:css": "wp-scripts lint-style && ./node_modules/.bin/sass-lint --config ./node_modules/@webdevstudios/css-coding-standards/.sass-lint.yml '**/*.scss' --verbose",
    "lint:js": "wp-scripts lint-js ./src",
    "lint:php": "./vendor/bin/phpcs --standard=./.phpcs.xml.dist --extensions=php ./ --ignore='./build/*,./node_modules/*,./vendor/*'",
    "packages-update": "wp-scripts packages-update",
    "styles": "run-s styles:compile styles:compress",
    "styles:compile": "node-sass css/cptui.scss -o css/ --source-map true",
    "styles:compress": "node-sass css/style.css css/style.min.css --output-style compressed",
    "uglify": "uglifyjs js/cptui.js -m -c --source-map -o js/cptui.min.js && uglifyjs js/dashicons-picker.js -m -c --source-map -o js/dashicons-picker.min.js",
    "create:release": "mkdirp release-build/custom-post-type-ui && cp -R classes css external images inc js readme.txt LICENSE custom-post-type-ui.php release-build/custom-post-type-ui"
  },
  "devDependencies": {
    "@webdevstudios/css-coding-standards": "^1.0.1",
    "@webdevstudios/js-coding-standards": "^1.3.0",
    "@wordpress/scripts": "^23.0.0",
    "clean-webpack-plugin": "^4.0.0",
    "css-loader": "^6.7.1",
    "css-mqpacker": "^7.0.0",
    "cssnano": "^5.1.5",
    "ignore-emit-webpack-plugin": "^2.0.6",
    "mini-css-extract-plugin": "^2.6.0",
    "node-sass": "^7.0.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.12",
    "postcss-loader": "^6.2.1",
    "postcss-safe-parser": "^6.0.0",
    "sass-loader": "^12.6.0",
    "style-loader": "^3.3.1",
    "uglify-js": "^3.15.4",
    "webpack": "^5.70.0",
    "wp-pot-cli": "^1.5.0"
  },
  "eslintConfig": {
    "extends": [
      "plugin:@wordpress/eslint-plugin/esnext",
      "plugin:@wordpress/eslint-plugin/react",
      "@webdevstudios/js-coding-standards"
    ]
  },
  "sasslintConfig": "./node_modules/@webdevstudios/css-coding-standards/.sass-lint.yml",
  "stylelint": {
    "extends": "stylelint-config-wordpress",
    "ignoreFiles": [
      "**/*.scss",
      "build/**/*.css"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/WebDevStudios/custom-post-type-ui"
  },
  "keywords": [
    "plugin",
    "post-types",
    "taxonomies"
  ],
  "author": "WebDevStudios",
  "license": "GPL-2.0+",
  "bugs": {
    "url": "https://github.com/WebDevStudios/custom-post-type-ui/issues"
  },
  "homepage": "https://github.com/WebDevStudios/custom-post-type-ui"
}
